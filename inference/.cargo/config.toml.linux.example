# Linux environment variables for cargo build
# Copy this file to config.toml on Linux systems:
#   cp config.toml.linux.example config.toml
#
# After installing dependencies:
#   sudo apt install llvm-dev libclang-dev libopencv-dev pkg-config  # Ubuntu/Debian
#   sudo dnf install llvm-devel clang-devel opencv-devel             # Fedora
#
# Most Linux systems auto-detect via pkg-config, but you can override here if needed:

[env]
# Uncomment and adjust paths if auto-detection fails:
# LIBCLANG_PATH = { value = "/usr/lib/llvm-14/lib", force = true, relative = false }
# LLVM_CONFIG_PATH = { value = "/usr/bin/llvm-config", force = true, relative = false }
# OpenCV_DIR = { value = "/usr", force = true, relative = false }
